
<div class="row">
    <div class="col-7">
        <% if session[:error].nil? || session[:error] %>
            <div class="alert alert-info alert-dismissible fade show" role="alert">
                Place your bet on dice number (1 to 6)
            </div>
         <% elsif session[:win] %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                You win!ðŸ¥³
                 <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
                </button>
            </div>
        <% else %>
            <div class="alert alert-secondary alert-dismissible fade show" role="alert">
                Good luck next timeðŸ«¡
                 <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
                 </button>
            </div>
        <% end %>

        <form action="/bet" method="post">
            <div class="form-group row">
                <label class="col col-form-label">Bet money</label>
                <div class="col">
                    <input autofocus type="number" class="form-control italic" name="money" min="1" placeholder="Any positive number" required>
                </div>
            </div>
            <div class="form-group row">
                <label class="col col-form-label">On dice number</label>
                <div class="col">
                    <input type="number" class="form-control italic" min="1" max="6" name="guess" placeholder="1 to 6" required>
                </div>
            </div>

            <div class="form-group row">
                <div class="col">
                    <button type="submit" class="btn btn-dark float-right">Bet</button>
                </div>
            </div>
            <br>
        </form>
</div>

 <div class="col custom-background">
