<% if session[:login].nil? == false && session[:login] == false %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        Login error! Please check your username and password.
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
        </button>
    </div>
<% end %>

<form class="form-inline" action="/login" method="post">
    <div class="input-group mb-2 mr-sm-2">
        <div class="input-group-prepend">
            <div class="input-group-text">@</div>
        </div>
        <input autofocus type="text" class="form-control" name="username" placeholder="Username" required>
    </div>

    <div class="input-group mb-2 mr-sm-2">
        <div class="input-group-prepend"  style="height: 2rem;"> 
            <div class="input-group-text"  style="height: 2.3rem;"><i class="fas fa-key"></i></div>
        </div>
        <input type="password" name="password" class="form-control" placeholder="Password" required>
    </div>

    <button type="submit" class="btn btn-primary mb-2">LOGIN</button>
</form>

<div class="alert alert-info alert-dismissible alert-pink" role="alert">
    <h4 class="alert-heading">Note</h4>
    <p>Log in to play the game</p>   
    <hr>
</div>
